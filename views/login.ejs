<% layout('layouts/lboiler')%>
<style>
#box{
    width: auto;
  border: 15px solid darkcyan;
  padding: 50px;
  margin: 20px;
  position: relative;
  left: 370px;
  border-radius: 20px;
}
body{
    background-image: url("https://medicalnewsbulletin.com/wp-content/uploads/2017/02/type-2-diabetes-and-atrial-fibrillationopt.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    font-family:'Times New Roman', Times, serif;
}
</style>
<div class="row" >
    <h1 class="text-center">Welcome to Doc@ease.</h1>
    <h3 class="text-center">Sign in</h3>
    <div class="col-6 offset-3" id="box" style="backdrop-filter: blur(15px);">
        <form action="/home" method="post" novalidate class="validated-form" >
            <div class="mb-3">
                <label class="form-label" for="Username"><b>Username</b></label>
                <input class="form-control" type="text" id="Username" name="username"
                    placeholder="Enter your Username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="Password"><b>Password</b></label>
                <input class="form-control" type="password" id="Password" name="password"
                    placeholder="Password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
             
          
            <div class="mb-3">
                <button class="btn btn-info">Login</button>
            </div>
            <p><b>Don't have an account? <a   class="btn btn-info color-" href="/signup">Signup</a> 
                ,it's free.</b></p>
        </form>
        <a href="http://127.0.0.1:5000/">Predict your disease using our Disease predictor!</a>

    </div>
</div>